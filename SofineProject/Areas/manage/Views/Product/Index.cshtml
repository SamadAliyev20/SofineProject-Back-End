@model PageNatedList<Product>
@{
	ViewData["Title"] = "Index";
	int count = (Model.PageIndex - 1) * 5;
}

<div class="d-flex flex-row">
	<div class="col-lg-2">
		<h1 class="h3 mb-3 text-gray-800">Product Page</h1>
	</div>
	<div class="col-lg-2">
		<a class="btn btn-primary" asp-action="create" asp-controller="product" asp-area="manage">Create</a>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>No</th>
					<th>Img</th>
					<th>Name</th>
					<th>Created At</th>
					<th>Created By</th>
					<th>Settings</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Product product in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td><img style="width:100px" src="~/assets/img/product/@product.MainImage" alt=""></td>
						<td>@product.Title</td>
						<td>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</td>
						<td>@product.CreatedBy</td>
						<td>
							<a asp-area="manage" asp-controller="product" asp-action="detail" asp-route-id="@product.Id" class="btn btn-primary">Detail</a>
							<a asp-area="manage" asp-controller="product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
							<a asp-area="manage" asp-controller="product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="col-lg-12">
		<nav aria-label="Page navigation example">
			<ul class="pagination">
				@if (Model.PageIndex > 1)
				{
					<li class="page-item">
						<a class="page-link" asp-action="Index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a>
					</li>
				}

				@for (int i = Model.StartPage; i <= Model.EndPage; i++)
				{
					<li class="page-item @(Model.PageIndex == i ? "active":"")">
						<a class="page-link" asp-action="Index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@i">@i</a>
					</li>
				}

				@if (Model.PageIndex < Model.TotalPage)
				{
					<li class="page-item">
						<a class="page-link" asp-action="Index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a>
					</li>
				}
			</ul>
		</nav>
	</div>
</div>



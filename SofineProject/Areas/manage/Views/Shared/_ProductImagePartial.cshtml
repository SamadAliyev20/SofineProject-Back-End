@model IEnumerable<ProductImage>
@if (Model != null && Model.Count() > 0)
{
	@foreach (ProductImage productImage in Model)
	{
		<div class="col-lg-5 mb-3">
					<img style="width:130px" src="~/assets/img/Product/@productImage.Image" />
			@if (Model.Count() > 1)
			{
							<a asp-area="manage" asp-action="deleteimage" asp-controller="product" asp-route-id="@productImage.ProductId" data-imageId="@productImage.Id" style="width:min-content" class="btn btn-danger deleteImage mt-2">Delete Image </a>
			}
				</div>
	}
}
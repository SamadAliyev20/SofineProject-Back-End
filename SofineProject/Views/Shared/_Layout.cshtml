			crossorigin="anonymous"></script>
	@RenderSection("Scripts",false)
	<script src="~/assets/js/site.js"></script>
	<script src="~/assets/js/vanilla.js"></script>
	@if (TempData["ToasterMessage"] != null)
	{
		<script>
			Swal.fire({
				title: '@TempData["ToasterMessage"]',
				icon: 'success',
				timer: 1000,
				showConfirmButton: false
			});
		</script>
	}
	@if (TempData["ToasterMessage2"] != null)
	{
		<script>
			Swal.fire({
				title: '@TempData["ToasterMessage2"]',
				icon: 'success',
				timer: 4000,
				showConfirmButton: false
			});
		</script>
	}
	@if (TempData["ToasterMessage5"] != null)
	{
		<script>
			Swal.fire({
				title: '@TempData["ToasterMessage5"]',
				icon: 'error',
				timer: 2000,
				showConfirmButton: false
			});
		</script>
	}
	<!--=======================Javascript============================-->
</body>

</html>